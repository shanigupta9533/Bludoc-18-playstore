<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/font_12"
    android:layout_marginEnd="@dimen/font_12"
    android:background="@drawable/blue_faint_btn_gradient_changes"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_12"
        android:fontFamily="@font/poppins"
        android:visibility="gone"
        android:layout_marginStart="@dimen/font_12"
        android:layout_marginEnd="@dimen/font_8"
        android:maxLength="60"
        android:maxLines="1"
        android:text="Consultation"
        android:textColor="#43A6C6"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/font_11"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:maxLength="60"
            android:layout_marginStart="@dimen/font_12"
            android:layout_marginEnd="@dimen/font_8"
            android:fontFamily="@font/poppinsmedium"
            android:maxLines="1"
            android:text="Consult"
            android:textColor="@color/little_blue_invoice"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginStart="@dimen/font_12"
            android:layout_marginEnd="@dimen/font_8"
            android:fontFamily="@font/poppins"
            android:maxLines="2"
            android:alpha="0.7"
            android:text="Consult"
            android:textColor="#000"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/font_13"
        android:layout_marginBottom="@dimen/font_12"
        android:id="@+id/parent_of_button"
        android:weightSum="3">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="60dp"
            android:layout_height="@dimen/margin_25"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/blue_round_vodka"
            android:fontFamily="@font/poppinsmedium"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="70dp"
            android:layout_height="@dimen/margin_25"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/blue_round_vodka"
            android:fontFamily="@font/poppinsmedium"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

</LinearLayout>