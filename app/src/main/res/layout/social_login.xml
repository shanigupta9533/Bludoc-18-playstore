<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:elevation="@dimen/margin_4"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:visibility="gone"
        style="@style/AppThemeProgressBar"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:id="@+id/progress_bar_social"
        />

   <RelativeLayout

        android:id="@+id/fl"
        android:layout_width="match_parent"
       android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

       <ImageView

           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_gravity="center"
           android:layout_centerInParent="true"
           android:id="@+id/image"
           android:background="@color/cardview_shadow_end_color"
           android:src="@drawable/bludoc_shadow"
           />
<LinearLayout
    android:id="@+id/ll_title"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/image"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
       <TextView
           android:textAllCaps="false"
           android:textStyle="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginTop="80dp"
           android:textColor="@color/colorBlueDarkNew"
           android:textSize="60dp"
           android:text="Blu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Doc"
        android:textAllCaps="false"
        android:textColor="@color/colorBlueTop"
        android:textSize="60dp"
        android:textStyle="bold" />

</LinearLayout>

       <TextView
           android:layout_below="@id/ll_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Prescriptions Made Easy"
           android:layout_centerHorizontal="true"
           android:textAllCaps="false"
           android:textColor="@color/colorBlueDarkNew"
           android:textSize="17sp"
           android:textStyle="bold" />

    </RelativeLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/margin_40"

        android:layout_margin="@dimen/margin_15"
        android:layout_gravity="bottom|center"
        android:gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
<LinearLayout
    android:layout_marginBottom="45dp"
    android:layout_gravity="bottom|center"
    android:gravity="center|bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



        <!--<TextView
            android:layout_toLeftOf="@id/til"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_country_code"
            android:text="Country Code"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            />-->





    <LinearLayout
        android:layout_margin="@dimen/margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_social"
        >
    <ImageButton
        android:clickable="true"
        android:elevation="@dimen/margin_5"
        android:layout_gravity="center"
        android:padding="@dimen/margin_8"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/white_btn_gradient"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/sign_in_button2"
        android:src="@drawable/ic_google"
        />



        <ImageButton
            android:clickable="true"
            android:elevation="@dimen/margin_5"
            android:layout_gravity="center"
            android:padding="@dimen/margin_8"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/white_btn_gradient"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/sign_in_button_fb"
            android:src="@drawable/ic_facebook"
            />
            <com.facebook.login.widget.LoginButton
                android:background="@drawable/white_btn_gradient"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_10"
                android:foreground="@drawable/ic_facebook"
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/login_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                 />



            <!--<ImageButton
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:layout_margin="@dimen/margin_10"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/login_button2"
                android:src="@drawable/ic_facebook"
                />-->

    </LinearLayout>
    <Button

        android:clickable="true"
        android:elevation="@dimen/margin_10"
        android:padding="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:id="@+id/btn_mob_no"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/blue_faint_round_btn_gradient"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Continue with e-mail Id"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="16sp"
        android:typeface="sans" />
    <TextView

        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/colorDarkstGrey"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/termsnconditions"
        android:id="@+id/termsconditions"
        />

</LinearLayout>
    </FrameLayout>
    <!--<com.google.android.gms.common.SignInButton
        android:layout_below="@id/ll_login"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
-->





</FrameLayout>
