<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_patient_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginStart="@dimen/font_12"
    android:layout_marginEnd="@dimen/font_12"
    android:background="@drawable/blue_faint_btn_gradient2"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_15"
    android:paddingLeft="@dimen/margin_15"
    android:paddingTop="@dimen/margin_8"
    android:paddingEnd="@dimen/margin_15"
    android:paddingRight="@dimen/margin_15"
    android:paddingBottom="@dimen/margin_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/invoice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/poppins"
            android:text="Invoice title"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/poppins"
                android:text="Invoice Number : "
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/poppins"
                android:layout_gravity="center_vertical"
                android:text="Invoice title"
                android:textColor="@color/colorBlack"
                android:textSize="11sp"
                />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        android:weightSum="0">

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginTop="@dimen/margin_12"
            android:fontFamily="@font/poppins"
            android:text="Patient Name"
            android:textColor="@color/colorDarkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_patient_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:fontFamily="@font/poppins"
            android:gravity="right"
            android:visibility="gone"
            android:text="Created on"
            android:textColor="@color/colorDarkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="Email Id"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="Mobile"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="Date"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_patient_modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text=""
        android:textColor="@color/colorDarkGrey"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />


</LinearLayout>