<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/no_pagination_error_background"
    android:gravity="center"

    android:orientation="vertical"
    android:padding="@dimen/font_12">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/no_pagination_error_color_separate_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/font_12"
        android:layout_marginTop="@dimen/font_12"
        android:gravity="center"
        android:textSize="@dimen/font_16"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/whitneybook"
        android:text="No Internet Connections ...."/>

    <Button
        android:id="@+id/btnRepeat"
        style="@style/RepeatButtonStyle"
        android:fontFamily="@font/whitneymedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_35"
        android:text="Refresh"
        android:textAllCaps="false"
        android:textSize="@dimen/font_14"
        android:background="@drawable/round_as_button_yellow"
        android:textColor="@color/no_pagination_error_background"/>

</LinearLayout>