<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:id="@+id/logo_parent"
        app:cardCornerRadius="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bludocc_loho"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/logo_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/font_12"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/poppinsmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_gravity="center"
            android:text="Blu"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#71a7f8"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/poppinsmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_gravity="center_horizontal"
            android:text="Doc"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#2E3858"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:layout_above="@+id/line"
        android:alpha="0.7"
        android:layout_marginBottom="@dimen/font_10"
        android:paddingRight="@dimen/margin_10">

        <TextView
            android:fontFamily="@font/poppins"
            android:id="@+id/Log_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/poppins"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBBS"
            android:textColor="#000"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/font_12"
        android:id="@+id/line"
        android:layout_marginEnd="@dimen/font_12"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        />

</RelativeLayout>
