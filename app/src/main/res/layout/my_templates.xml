<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterDetails">

    <LinearLayout
        android:id="@+id/ll_invite_member"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:paddingTop="@dimen/margin_10"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft   ="@dimen/margin_20"
            android:layout_marginStart  ="@dimen/margin_20"
            android:layout_marginEnd    ="@dimen/margin_20"
            android:layout_marginRight  ="@dimen/margin_20"
            android:layout_marginTop ="60dp"
            android:background="#fff"/>

        <Button
            android:layout_margin="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center|top"
            android:paddingLeft     ="@dimen/margin_30"
            android:paddingStart    ="@dimen/margin_30"
            android:paddingEnd      ="@dimen/margin_30"
            android:paddingRight    ="@dimen/margin_30"
            android:textColor="@color/white"
            android:background="@drawable/blue_round_btn_gradient"
            android:id="@+id/btn_new_template"
            android:text="Create new template"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                    <ImageView
                        android:id="@+id/iv_no_template"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="170dp"
                        />


                    <TextView
                        android:id="@+id/tv_no_template"
                        android:layout_marginTop="@dimen/margin_30"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginStart="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_30"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create &amp; customise templates of your routinely prescribed medications"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <include layout="@layout/progress_bar_layout"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>