<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".DigitalClinicConfirmationActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/windowBackground">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/whitneybook"
                    android:gravity="center"
                    android:letterSpacing="0.025"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/font_12"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppinsmedium"
                        android:lines="1"
                        android:text="My Digital Clinic"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#71a7f8"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/fl_share"
                    android:layout_marginEnd="@dimen/font_15"
                    android:src="@drawable/ic_share__" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#eeeeee" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view"
            android:layout_below="@+id/toolbar"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/font_22"
                    app:cardCornerRadius="@dimen/margin_50">

                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_male" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_20"
                    android:layout_marginTop="@dimen/font_20"
                    android:layout_marginEnd="@dimen/font_12"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitneybook"
                        android:text="Name"
                        android:textColor="#8c8c8c"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_8"
                        android:fontFamily="@font/whitneybook"
                        android:textColor="@color/gnt_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_20"
                    android:layout_marginTop="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/font_12"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitneybook"
                        android:text="Contact"
                        android:textColor="#8c8c8c"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_8"
                        android:fontFamily="@font/whitneybook"
                        android:textColor="@color/gnt_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_20"
                    android:layout_marginTop="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/font_12"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitneybook"
                        android:text="Mail Id"
                        android:textColor="#8c8c8c"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/emailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_8"
                        android:fontFamily="@font/whitneybook"
                        android:textColor="@color/gnt_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_20"
                    android:layout_marginTop="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/font_12"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitneybook"
                        android:text="Registration Number"
                        android:textColor="#8c8c8c"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/registrationNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_8"
                        android:fontFamily="@font/whitneybook"
                        android:textColor="@color/gnt_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_20"
                    android:layout_marginTop="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/font_12"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitneybook"
                        android:text="Qualification"
                        android:textColor="#8c8c8c"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/qualifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_8"
                        android:fontFamily="@font/whitneybook"
                        android:textColor="@color/gnt_black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/font_12"
            android:layout_marginEnd="@dimen/font_12"
            android:layout_marginTop="@dimen/font_12"
            android:layout_marginBottom="70dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Your Digital Clinic page has been successfully created via BluDoc"
            android:textColor="@color/colorBlack"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/parent_of_button_bottom"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/font_12"
            android:layout_marginEnd="@dimen/font_12"
            android:layout_marginTop="@dimen/font_12"
            android:layout_marginBottom="@dimen/font_12"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/viewDigitalDetails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/design_as_edittext_gradient"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/design_as_outlined_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins"
                    android:text="Edit"
                    android:textColor="#27B4E4"
                    android:textSize="14dp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>