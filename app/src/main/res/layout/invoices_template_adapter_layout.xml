<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_template_main_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    android:layout_marginStart="@dimen/font_10"
    android:layout_marginEnd="@dimen/font_10"
    android:background="@drawable/blue_faint_btn_gradient_changes"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <TextView
        android:id="@+id/tv_template_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:paddingStart="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_5"
        android:text="Template Name"
        android:textColor="@color/blue_light_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="0">

        <Button
            android:id="@+id/template_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_10"
            android:textSize="@dimen/font_13"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:background="@drawable/blue_round_vodka"
            android:fontFamily="@font/poppins"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/template_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:textSize="@dimen/font_13"
            android:background="@drawable/blue_round_vodka"
            android:fontFamily="@font/poppins"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="View / Edit"
            android:textAllCaps="false"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/template_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25"
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_2"
            android:layout_weight="1"
            android:textSize="@dimen/font_13"
            android:background="@drawable/blue_round_vodka"
            android:fontFamily="@font/poppins"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>