<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                app:tint="@color/colorBlack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_action_doctor_details"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/font_14"
                android:fontFamily="@font/poppinsmedium"
                android:alpha="0.6"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_5"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15"
                android:text="@string/doctor_details" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_details"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                app:tint="@color/colorBlack"
                android:layout_width="25dp"
                android:alpha="0.7"
                android:layout_height="25dp"
                android:src="@drawable/ic_hospital_icon"
                android:layout_gravity="center"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.6"
                android:layout_marginStart="@dimen/font_14"
                android:fontFamily="@font/poppinsmedium"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15"
                android:text="@string/clinic_hospital_name" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hostiptal_name"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                app:tint="@color/colorBlack"
                android:layout_width="25dp"
                android:alpha="0.7"
                android:layout_height="25dp"
                android:src="@drawable/ic_action_footer"
                android:layout_gravity="center"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:alpha="0.6"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/font_14"
                android:fontFamily="@font/poppinsmedium"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15"
                android:text="@string/footer_details" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/footer_details"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_pharmacist"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_pharmacist_doctor"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.6"
                android:layout_marginStart="@dimen/font_14"
                android:fontFamily="@font/poppinsmedium"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15"
                android:text="@string/add_pharmacist" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_to_pharmacist"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                app:tint="@color/colorBlack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.7"
                android:src="@drawable/ic_action_send_pharmacist"
                android:layout_gravity="center"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/font_14"
                android:fontFamily="@font/poppinsmedium"
                android:alpha="0.6"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15"
                android:text="@string/send_to_pharmacist" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/language"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                app:tint="@color/colorBlack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_action_language"
                android:alpha="0.7"
                android:layout_gravity="center"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/font_14"
                android:alpha="0.6"
                android:fontFamily="@font/poppinsmedium"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15"
                android:text="@string/language" />


        </LinearLayout>

    </LinearLayout>

</layout>