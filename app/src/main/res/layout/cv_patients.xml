<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_patient_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_5"
    android:background="@drawable/blue_faint_btn_gradient2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:id="@+id/tv_patient_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:background="@drawable/round_as_name"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="@dimen/margin_12"
            android:text="Patient Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <ImageView

            android:layout_marginEnd    ="@dimen/margin_10"
            android:layout_marginRight  ="@dimen/margin_10"
            android:layout_marginBottom ="@dimen/margin_5"
            android:layout_marginTop    ="@dimen/margin_5"
            android:background="@drawable/white_btn_gradient"
            android:id="@+id/patient_prescribe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|end"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/margin_6"
            android:src="@drawable/fast_forward"
            android:textColor="@color/colorBlue" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_14"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="DOB"
                    android:textColor="@color/colorBlue"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:fontFamily="@font/poppins"
                    android:text="Gender"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Age/Gender : "
                    android:textColor="@color/colorBlue"
                    android:textSize="11sp" />

                <TextView
                    
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Gender"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Blood Group : "
                        android:textColor="@color/colorBlue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/blood_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Gender"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="11sp" />

                </LinearLayout>



                <ImageView
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:id="@+id/patient_edit"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/edit_data"
                    android:textColor="@color/colorBlue" />


                <ImageView

                    android:id="@+id/patient_delete"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/delete_data"
                    android:textColor="@color/colorBlue"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_12"
            android:background="@color/colorBlue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:fontFamily="@font/poppinsmedium"
                android:text="Email : "
                android:textColor="@color/colorBlue"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:alpha="0.7"
                android:fontFamily="@font/poppins"
                android:text="Email Id"
                android:textColor="@color/colorBlack"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_12"
            android:weightSum="0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Mobile : "
                    android:textColor="@color/colorBlue"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Mobile"
                    android:textColor="@color/colorBlack"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_patient_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end|bottom"
                android:fontFamily="@font/poppins"
                android:gravity="end|bottom"
                android:text="Created on"
                android:textColor="@color/colorDarkGrey"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_patient_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text=""
            android:textColor="@color/colorDarkGrey"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_patient_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text=""
            android:textColor="@color/colorDarkGrey"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>