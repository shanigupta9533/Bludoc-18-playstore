<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center|top"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_15"
                android:gravity="center"
                android:text="Patient Update"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--        Name       -->


                <TextView
                    android:fontFamily="@font/poppins"
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:gravity="center"
                    android:text="Patient's Full Name *"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="15sp"
                    />

                <EditText
                    android:fontFamily="@font/poppins"
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/blue_faint_btn_gradient2"
                    android:focusedByDefault="false"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--        Org Name       -->
                    <TextView
                        android:id="@+id/textView_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_30"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Gender *"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="15sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:orientation="horizontal"
                        android:weightSum="0">


                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="Male"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="Female"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/rb_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="Other"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_25"
                        android:orientation="vertical">
                        <!--        Org Name       -->
                        <TextView
                            android:id="@+id/textView_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_30"
                            android:layout_marginLeft="@dimen/margin_30"
                            android:layout_marginEnd="@dimen/margin_30"
                            android:layout_marginRight="@dimen/margin_30"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Age (Optional)"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="15sp"
                             />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/font_12"
                            android:weightSum="0"

                            >

                            <EditText
                                android:id="@+id/et_age"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_40"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:layout_marginRight="@dimen/margin_20"
                                android:layout_weight="1"
                                android:background="@drawable/blue_faint_btn_gradient2"
                                android:focusedByDefault="false"
                                android:fontFamily="@font/poppins"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="@dimen/margin_10"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="15sp" />

                            <RadioButton
                                android:id="@+id/rb_year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins"

                                android:text="Year"
                                android:textColor="@color/colorDarkGrey"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/rb_month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins"
                                android:text="Month"
                                android:textColor="@color/colorDarkGrey"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/margin_50"
                    android:layout_marginEnd="58dp"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/font_20"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/font_16"
                        android:layout_gravity="center_vertical"
                        android:background="#dcdcdc"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="OR"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="#dcdcdc"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_30"
                        android:gravity="center"
                        android:text="Patient's Date Of Birth (Optional)"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/poppins"
                            android:textSize="15sp"
                            android:padding="@dimen/margin_10"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorBlack"
                            android:id="@+id/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_40"
                            android:background="@drawable/blue_faint_btn_gradient2"/>

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:id="@+id/cancel_action"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:src="@drawable/ic_action_clear_name"
                            android:layout_gravity="end|center_vertical"
                            app:tint="@color/colorBlack" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_30"
                        android:gravity="center"
                        android:text="Blood Group (Optional)"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="15sp"
                       />

                    <EditText
                        android:fontFamily="@font/poppins"
                        android:id="@+id/blood_group"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@drawable/blue_faint_btn_gradient2"
                        android:padding="@dimen/margin_10"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>

                <!--        Name       -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_30"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView_whtsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="WhatsApp Number (optional)"

                        android:textColor="@color/colorDarkGrey"
                        android:textSize="15sp"
                         />

                    <ImageView
                        android:id="@+id/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:padding="4dp"
                        android:src="@drawable/info_icon"

                        />
                </LinearLayout>

                <EditText
                    android:fontFamily="@font/poppins"
                    android:id="@+id/et_whtsapp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/blue_faint_btn_gradient2"
                    android:focusedByDefault="false"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="18"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="16sp" />

                <!--        Org Name       -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_30"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Email Id (optional)"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:id="@+id/info1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:padding="4dp"
                        android:src="@drawable/info_icon"
                        />
                </LinearLayout>


                <EditText
                    android:fontFamily="@font/poppins"
                    android:id="@+id/et_mail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/blue_faint_btn_gradient2"
                    android:focusedByDefault="false"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_30"
                        android:gravity="center"
                        android:text="Address (Optional)"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                         />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@drawable/blue_faint_btn_gradient2"
                        android:gravity="top"
                        android:lines="4"
                        android:padding="@dimen/margin_10"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:fontFamily="@font/poppins"
                        android:textSize="15sp" />

                </LinearLayout>

                <Button
                    android:fontFamily="@font/poppinsmedium"
                    android:id="@+id/btn_upload_image"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/margin_35"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_20"
                    android:background="@drawable/blue_round_btn_gradient"
                    android:gravity="center"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"

                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/margin_35"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_40"
                    android:background="@drawable/grey_dark_btn_gradient_tablet"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/transparent_progress_bar"/>

</RelativeLayout>