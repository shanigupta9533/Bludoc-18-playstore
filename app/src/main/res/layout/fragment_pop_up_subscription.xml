<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_dialog_background"
        android:minWidth="330dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_15"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_close_black_48dp" />

        <LinearLayout
            android:id="@+id/ll_promo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/margin_5"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/nameOfProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/font_12"
                android:fontFamily="@font/poppinsmedium"
                android:visibility="gone"
                android:lines="1"
                android:text="Patient list"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/gnt_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_no_template"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/margin_20"
                android:src="@drawable/bludocc_loho" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/font_10"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:lines="1"
                    android:text="Blu"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#71a7f8"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppinsmedium"
                    android:lines="1"
                    android:text="Doc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#2E3858"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:fontFamily="@font/poppinsmedium"
                android:lines="1"
                android:text="Premium Feature"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorBlueTop"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:fontFamily="@font/poppinsmedium"
                android:lines="1"
                android:text="Upgrade to premium for all features"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorBlueTop"
                android:textSize="11sp"
                 />

            <TextView
                android:id="@+id/tv_no_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_15"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="@dimen/font_15"
                android:layout_marginRight="@dimen/font_15"
                android:fontFamily="@font/poppins"
                android:lineSpacingExtra="@dimen/font_6"
                android:text=" • Give Certificate
\n • Create Invoice
\n • My Digital Clinic
\n • Online booking appointments
\n • Add Referral centre
\n • Create templates for medicines and labs
\n • Change date for prescription, certificate and invoice
\n • Hide Header, footer &amp; more details
\n • A4 Size prescription view
\n • BluDoc Desktop Version"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_upgrade_premium"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/margin_40"
                android:background="@drawable/blue_faint_round_btn_gradient"
                android:clickable="true"
                android:elevation="@dimen/margin_10"
                android:fontFamily="@font/whitneysemibold"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="UPGRADE TO PREMIUM"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>

</layout>
