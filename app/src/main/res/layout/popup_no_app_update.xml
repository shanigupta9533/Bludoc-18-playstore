<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:visibility="gone"
        android:id="@+id/btn_close"
        android:padding="@dimen/margin_10"
        android:layout_margin="@dimen/margin_15"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_close_black_48dp"
        android:layout_gravity="end"
        />
    <LinearLayout
        android:id="@+id/ll_promo"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:elevation="@dimen/margin_5"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_marginTop="@dimen/margin_20"
            android:id="@+id/iv_no_template"
            android:layout_gravity="top|center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bludocc_loho"

            />


        <TextView
            android:id="@+id/tv_no_template"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="An old version detected, kindly update to the latest version."
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="normal"
            android:typeface="sans"
            />


    <Button
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:elevation="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginBottom="@dimen/margin_20"
        android:padding="@dimen/margin_10"
        android:id="@+id/btn_update_play_store"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:background="@drawable/blue_faint_round_btn_gradient"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Update"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="16sp"
        android:typeface="sans" />

        <Button
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_40"
            android:padding="@dimen/margin_10"
            android:id="@+id/btn_later"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:background="@drawable/grey_dark_btn_gradient_tablet"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Later"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16sp"
            android:typeface="sans" />



    </LinearLayout>
</FrameLayout>

