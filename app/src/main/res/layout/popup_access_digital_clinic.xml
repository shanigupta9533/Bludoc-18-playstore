<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/btn_close"
        android:padding="@dimen/margin_10"
        android:layout_margin="@dimen/margin_15"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_close_black_48dp"
        android:layout_gravity="end"
        />
    <LinearLayout
        android:id="@+id/ll_promo"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:elevation="@dimen/margin_5"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_marginTop="@dimen/margin_20"
            android:id="@+id/iv_no_template"
            android:layout_gravity="top|center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bludocc_loho"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/font_12"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/poppinsmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_gravity="center"
                android:text="Blu"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#71a7f8"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/poppinsmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_gravity="center_horizontal"
                android:text="Doc"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#2E3858"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:fontFamily="@font/poppinsmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="@dimen/font_8"
            android:layout_gravity="center_horizontal"
            android:text="My Digital Clinic"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#2E3858"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_no_template"
            android:layout_marginTop="@dimen/font_15"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginStart="@dimen/font_15"
            android:layout_marginRight="@dimen/font_15"
            android:lineSpacingExtra="@dimen/font_6"
            android:layout_marginEnd="@dimen/font_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:fontFamily="@font/whitneybook"
            android:text="Your account is pending for approval. Please contact hospital admin"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            />


        <Button
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_40"
            android:id="@+id/btn_register"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:fontFamily="@font/whitneysemibold"
            android:background="@drawable/blue_faint_round_btn_gradient"
            android:gravity="center"
            android:text="Let's start"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="15sp"
            />



    </LinearLayout>

</FrameLayout>

