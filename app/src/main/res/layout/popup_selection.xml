<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="@color/white"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/btn_close"
        android:padding="@dimen/margin_10"
        android:layout_margin="@dimen/margin_15"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_close_black_48dp"
        android:layout_gravity="end"
        />
    <LinearLayout

        android:id="@+id/ll_promo"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:elevation="@dimen/margin_5"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_marginTop="@dimen/margin_20"
            android:id="@+id/iv_no_template"
            android:layout_gravity="top|center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bludocc_loho"

            />


        <TextView
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/tv_no_template"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_30"
            android:layout_marginBottom   ="@dimen/margin_20"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Please select the view for Prescription"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="normal"
            android:typeface="sans"
            />


    <Button
        android:fontFamily="@font/poppins"
        android:clickable="true"
        android:elevation="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_40"

        android:id="@+id/btn_mobile"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center"


        android:background="@drawable/blue_faint_round_btn_gradient2"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Mobile View"
        android:textAllCaps="false"
        android:textColor="@color/colorDarkBlue"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp"
       />


        <Button
            android:fontFamily="@font/poppins"
            android:clickable="true"
            android:elevation="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_40"

            android:id="@+id/btn_a_size"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:background="@drawable/green_faint_round_btn_gradient2"
            android:gravity="center"
            android:textStyle="bold"
            android:text="A4 Size View"
            android:textAllCaps="false"
            android:textColorHint="@color/colorWhite"
            android:textSize="18sp"
            android:textColor="@color/colorDarkBlue"

            />


    </LinearLayout>
</FrameLayout>

