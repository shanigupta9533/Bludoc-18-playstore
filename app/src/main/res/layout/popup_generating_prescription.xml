<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:id="@+id/ll_promo"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:elevation="@dimen/margin_5"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_marginTop="@dimen/margin_20"
            android:id="@+id/iv_no_template"
            android:layout_gravity="top|center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pres_home"
            />


        <TextView
            android:id="@+id/tv_no_template"
            android:layout_margin="@dimen/margin_20"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Please wait...\nPrescription is too long. We are generating 2 or more page prescription for you"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="normal"
            android:typeface="sans"
            />

            <ProgressBar
                android:layout_margin="@dimen/margin_35"
                android:layout_gravity="center"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:id="@+id/pb_presciption"
                />




    </LinearLayout>
</FrameLayout>

