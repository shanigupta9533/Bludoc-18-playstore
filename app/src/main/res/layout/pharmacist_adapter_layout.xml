<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_patient_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_5"
    android:background="@drawable/blue_faint_btn_gradient2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pharmacist_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:background="@drawable/round_as_name"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/margin_12"
        android:paddingEnd="@dimen/margin_12"
        android:text="Pharmacist Name"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:buttonTint="@color/white"
            android:id="@+id/switch_ids"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/font_12"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/email"
                android:textColor="@color/colorBlue"
                android:textSize="11dp" />

            <TextView
                android:layout_marginLeft   ="@dimen/margin_5"
                android:layout_marginStart  ="@dimen/margin_5"

                android:id="@+id/email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:alpha="0.7"
                android:fontFamily="@font/poppins"
                android:text=" Email Id"
                android:textColor="@color/colorBlack"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/font_12"
            android:layout_marginBottom="@dimen/margin_12"
            android:weightSum="0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/mobile"
                    android:textColor="@color/colorBlue"
                    android:textSize="11dp" />

                <TextView
                    android:layout_marginLeft   ="@dimen/margin_5"
                    android:layout_marginStart  ="@dimen/margin_5"
                    android:id="@+id/mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text=" Mobile"
                    android:textColor="@color/colorBlack"
                    android:textSize="11dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/patient_edit"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:src="@drawable/edit_data"
                android:textColor="@color/colorBlue" />

            <ImageView
                android:id="@+id/patient_delete"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:src="@drawable/delete_data"
                android:textColor="@color/colorBlue"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginTop="-4dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Category : "
                android:textColor="@color/colorBlue"
                android:textSize="11dp" />

            <TextView
                android:layout_marginLeft   ="@dimen/margin_5"
                android:layout_marginStart  ="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:id="@+id/category_type"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text=" Path Lab"
                android:textColor="@color/colorBlack"
                android:textSize="11dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_patient_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end|bottom"
                android:fontFamily="sans-serif"
                android:gravity="end|bottom"
                android:text="Created on"
                android:textColor="@color/colorDarkGrey"
                android:textSize="10dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_patient_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/colorDarkGrey"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_patient_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/colorDarkGrey"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>