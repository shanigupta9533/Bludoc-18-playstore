<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <FrameLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_40"
        android:paddingStart="@dimen/margin_40"
        android:paddingEnd="@dimen/margin_40"
        android:paddingRight="@dimen/margin_40"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_20"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:gravity="center|top"
            android:background="@drawable/background_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView
                android:layout_gravity="center"

                android:layout_marginBottom="@dimen/margin_30"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter contact details"
                />

            <!--<TextView
                android:layout_toLeftOf="@id/til"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_country_code"
                android:text="Country Code"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                />-->


                    <EditText
                        android:layout_gravity="center"

                        android:id="@+id/first_name"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="textCapWords"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:typeface="sans"
                        android:background="#00000000"

                        />
            <View

                android:layout_marginBottom="@dimen/margin_15"
                android:layout_width="270dp"
                android:layout_height="2dp"
                android:background="@color/colorDarkGrey"
                />

            <EditText
                android:inputType="textCapWords"

                android:id="@+id/last_name"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDarkGrey"
                android:textSize="16sp"
                android:typeface="sans"
                android:background="#00000000"

                />

            <View
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_width="270dp"
                android:layout_height="2dp"
                android:background="@color/colorDarkGrey"
                />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorDarkGrey"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:background="#00000000"

                    />

            <View

                android:layout_marginBottom="@dimen/margin_15"
                android:layout_width="270dp"
                android:layout_height="2dp"
                android:background="@color/colorDarkGrey"
                />

            <FrameLayout
                android:layout_marginTop="@dimen/margin_20"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <Button
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btn_submit"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/blue_btn_gradient_new"
                android:gravity="center"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="20sp"
                android:typeface="sans" />

            <ProgressBar
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_25"
                android:id="@+id/progress_bar_submit"
                />
            </FrameLayout>

        </LinearLayout>


    </FrameLayout>
</FrameLayout>