<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.likesby.bludoc.HomeActivity"
    tools:showIn="@layout/app_bar_main"
    style="@style/parent.contentLayout"
    android:background="#00000000">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/poppinsmedium"
                android:id="@+id/tv_premium_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorDarkestBlue"
                android:layout_marginBottom="@dimen/margin_10"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentTop="true" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:padding="5dip"
                    app:centered="true"
                    android:layout_below="@+id/pager"
                    app:fillColor="#149EEA"
                    app:pageColor="#121A49"
                    app:snap="false" />
            </RelativeLayout>



            <LinearLayout
                android:elevation="@dimen/margin_5"
                android:background="@drawable/yellow_gradient"
                android:layout_marginLeft   ="@dimen/margin_10"
                android:layout_marginStart  ="@dimen/margin_10"
                android:layout_marginEnd    ="@dimen/margin_10"
                android:layout_marginRight  ="@dimen/margin_10"
                android:layout_marginBottom ="@dimen/margin_10"
                android:layout_marginTop    ="@dimen/margin_5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_premium"
                android:visibility="visible"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:id="@+id/tv_days_left"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/font_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Left"
                    android:layout_weight="1"
                    android:textColor="#121A49"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="@dimen/margin_5"
                    android:id="@+id/close_pop"
                    android:visibility="gone"
                    android:src="@drawable/ic_close_black_48dp"/>


            </LinearLayout>


            <Button
                android:fontFamily="@font/poppins"
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="Whatsapp Test"
                android:background="@drawable/blue_round_btn_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wahtsappTest"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="@dimen/margin_5"
                    android:id="@+id/prescribe"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/home_gradient_2"
                        android:padding="10dp">

                        <ImageView
                            android:layout_marginTop="@dimen/margin_2"
                            android:maxHeight="80dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img2"
                            android:src="@drawable/prescribe_new"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:fontFamily="@font/poppins"
                            android:text="Prescribe"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_marginBottom="@dimen/margin_2"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img2"
                            style="@style/viewParent.headerText"
                            android:textSize="12sp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:id="@+id/new_patient"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_marginBottom="20dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/home_gradient_2"
                        android:padding="10dp">

                        <ImageView
                            android:layout_marginTop="@dimen/margin_2"
                            android:maxHeight="80dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img3"
                            android:src="@drawable/patient_new"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:fontFamily="@font/poppins"
                            android:text="Add Patient"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_marginBottom="@dimen/margin_2"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img3"
                            style="@style/viewParent.headerText"
                            android:textSize="12sp"/>





                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight="1"
                    android:id="@+id/my_template"
                    android:layout_marginBottom="20dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/home_gradient_2"
                        android:padding="10dp">

                        <ImageView
                            android:layout_marginTop="@dimen/margin_2"
                            android:maxHeight="80dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img4"
                            android:src="@drawable/template_new"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:fontFamily="@font/poppins"
                            android:text="My Templates"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_marginBottom="@dimen/margin_2"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img4"
                            style="@style/viewParent.headerText"
                            android:textSize="12sp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:id="@+id/History"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_marginBottom="20dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/home_gradient_2"
                        android:padding="10dp">

                        <ImageView
                            android:layout_marginTop="@dimen/margin_2"
                            android:maxHeight="80dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img7"
                            android:src="@drawable/history_new"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:fontFamily="@font/poppins"
                            android:text="View History"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_marginBottom="@dimen/margin_2"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img7"
                            style="@style/viewParent.headerText"
                            android:textSize="12sp"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:id="@+id/add_pharmacist"
                android:layout_margin="@dimen/margin_5"
                android:layout_marginBottom="20dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="20dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="90dp"
                android:layout_gravity="center"
                android:background="@drawable/home_gradient_2"
                android:padding="10dp">

                <ImageView
                    android:layout_marginTop="@dimen/margin_2"
                    android:maxHeight="80dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img8"
                    android:src="@drawable/add_pharmacist_neww"
                    style="@style/homeCardImage"/>
                <TextView
                    android:fontFamily="@font/poppins"
                    android:text="@string/add_pharmacist"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/img8"
                    style="@style/viewParent.headerText"
                    android:textSize="12sp"/>

            </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:id="@+id/btn_desktop"
                android:layout_margin="@dimen/margin_5"
                android:layout_marginBottom="20dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/home_gradient_2"
                    android:padding="10dp">

                    <ImageView
                        android:layout_marginTop="@dimen/margin_2"
                        android:maxHeight="80dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/img9"
                        android:src="@drawable/desktop_version_new"
                        style="@style/homeCardImage"/>
                    <TextView
                        android:fontFamily="@font/poppins"
                        android:text="@string/desktop_version"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_marginBottom="@dimen/margin_2"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/img8"
                        style="@style/viewParent.headerText"
                        android:textSize="11sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
