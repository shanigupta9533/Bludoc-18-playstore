<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeProgressBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorOrangeFaintest</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorDarkBlue</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_action_search</item>
    </style>

    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorPrimary">@color/colorOrangeFaintest</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Action Bar Title Color -->
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
    </style>

    <style name="SwitchThemeOverlay" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#00c853</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#CC0000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#dcdcdc
        </item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_bg</item>
    </style>

    <style name="toggleButton" >
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@drawable/toogle_text_color</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#cc0000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">#1b5e20</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppThemeNOAC" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorOrangeFaintest</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Action Bar Hamburger Icon Color -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangeFaintest</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--SearchView query text color-->
        <item name="android:textColorPrimary">@color/colorBlack</item>

        <!--SearchView query hint text color-->
        <item name="android:textColorHint">@color/colorDarkGreen</item>

    </style>
    <style name="AppThemeTransparent" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/Transparent4</item>
        <item name="colorPrimary">@color/Transparent4</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="text_20">

        <item name="android:textSize">@dimen/text_size_medium15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="parent.contentLayout">
        <item name="android:background">@color/contentBodyColor</item>
        <item name="android:padding">20dp</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">13dp</item>
        <item name="alpha">0.8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="viewParent.headerText.HomeCardTitle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>



    <style name="homeCardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
    </style>


<!--    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">-->
<!--        <item name="android:textColor">#cc0000</item>-->
<!--        <item name="android:textColorPrimary">#595959</item>-->
<!--        <item name="android:colorAccent">#1b5e20</item>-->
<!--    </style>-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="SpinnerSmallFont" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="alpha">0.5</item>
        <item name="android:textSize">10sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

</resources>
