<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="15dp" />

    <gradient
        android:centerX="35%"
        android:centerY="50%"
        android:endColor="@color/colorDarkestBlue"
        android:gradientRadius="45"
        android:startColor="@color/colorDarkestBlue"
        android:type="radial" />

    <padding
        android:bottom="0dp"
        android:left="2dp"
        android:right="0dp"
        android:top="0dp" />

    <stroke
        android:width="5dp"
        android:color="@color/colorDarkestBlue" />

</shape>